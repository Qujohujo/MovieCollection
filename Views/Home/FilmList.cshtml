@{
}

@model IEnumerable<Movie>

<p>These are the films that have been submitted by users.</p>

<!--table that will contain every object from the movie context-->
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Year</th>
            <th>Director</th>
            <th>Rating</th>
            <th>Edited</th>
            <th>Lent To:</th>
            <th>Notes</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Category</td>
                <td>@movie.Year</td>
                <td>@movie.Director</td>
                <td>@movie.Rating</td>
                <td>@movie.Edited</td>
                <td>@movie.LentTo</td>
                <td>@movie.Notes</td>
                <!--create two small forms here that can update and delete by passing the id of the listed movie as a hidden field value-->
                
                <td>
                    <form method="get" asp-action="EditFilm">
                        <input name="movieId" id="movieId" type="hidden" value="@movie.MovieId" />
                        <button class="btn btn-light" type="submit">Edit</button>
                    </form>
                </td>
                <td>
                    <form method="post" asp-action="DeleteFilm">
                        <input name="movieId" id="movieId" type="hidden" value="@movie.MovieId" />
                        <button class="btn btn-light" type="submit">Delete</button>
                    </form>
                </td>
                
            </tr>

            
        }
    </tbody>
</table>
